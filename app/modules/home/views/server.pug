//- This is how we extend a template using the 'extends' keyword
extends ../../../templates/master.pug

//- This is how we insert dynamic content to extended templates
block content
        link(rel='stylesheet', type='text/css', href='/assets/css/inventory.css')
        script(type='text/javascript', src='/assets/js/jquery.min.js')
        link(rel='stylesheet', type='text/css', href='/assets/js/bootstrap.min.css')
        script(type='text/javascript', src='/assets/js/bootstrap.min.js')
        br
        .row
            .col-sm-12
                .card(style="width:100%; min-width:300px;")
                    .card-header
                        h4.subtitle(style="padding:2px;") Server Tab
                        .div
                            button.btn.btn-success(data-toggle='modal', data-target='#addmaterials') Add
                    .card-block.table-border-style
                        .table-responsive(style="width:100%; min-width:200px;")
                            table.table
                                thead
                                    tr
                                        th Server Id
                                        th Server Name
                                        th Served Product
                                        th Unit
                                        th Quantity
                                        th Date Served
                                        th Serving Status
                                        th Serving Description
                                        th Action
                                        th
                                tbody
                                    tr
                                        th 11451
                                        td FERRARIZ, Marvy E.	
                                        td Colt 45
                                        td Case
                                        td 2
                                        td 3-30-18 | 11:51 
                                        td SUCCESS
                                        td Delivered on Time
                                        td 
                                            button.btn.btn-primary(data-toggle='modal', data-target='#editmaterials') Edit
                                        td
                                            button.btn.btn-danger(type='button') Delete

            
            
            #addmaterials.modal.fade.modal-icon(tabindex='-1', role='dialog', aria-labelledby='addmaterial', aria-hidden='true')
                .modal-dialog(role='document')
                    .modal-content
                        .modal-header
                            h4#myModalLabel.modal-title Add 
                            button.close(type='button', data-dismiss='modal', aria-label='Close')
                                span(aria-hidden='true') ×
                        .modal-body
                            .row
                                .col-md-8
                                    .form-group
                                        | Server Name
                                        input#name.form-control(type='text', value='')
                            .row
                                .col-md-5
                                    .form-group
                                        |Served Product
                                        input#name.form-control(type='text', value='')
                                .col-md-4
                                    .form-group
                                        .input.is-primary
                                            select(name="uom" required)
                                                option(value='') -- UOM --
                                                option(value='Case') Case
                                                option(value='Bucket') Bucket
                                                option(value='Bottle') Bottle
                                .col-md-2
                                    .form-group
                                        |Quantity
                                        input#name.form-control(type='number', value='')
                            .row
                                .col-md-6
                                    .form-group
                                        | Date Served
                                        input#name.form-control(type="datetime-local")
                            .row    
                                .col-md-5
                                    .form-group
                                        | Serving Status
                                        input#name.form-control(type="text")
                                .col-md-5
                                    .form-group
                                        | Serving Description
                                        input#name.form-control(type="text")
                        .modal-footer
                            button.btn.btn-secondary(type='submit') Submit
                            button.btn.btn-secondary(type='button', data-dismiss='modal') Close

            #editmaterials.modal.fade.modal-icon(tabindex='-1', role='dialog', aria-labelledby='addmaterial', aria-hidden='true')
                .modal-dialog(role='document')
                    .modal-content
                        .modal-header
