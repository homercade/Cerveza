extends ./base

block body
    .style
        link(rel='stylesheet', href='/assets/css/style.css', type='text/css', media='all')
    #header
        .shell
            // Logo + Top Nav
            #top
                h1
                    img(src="source='/assets/images/logocerveza.png", alt="", srcset="")
                    span.title(style="color:white;") Welcome to Cerveza
                #top-navigation
                    a(href='/logout')(style="text-decoration:none;")
                        .subtitle Log-out
                    
                // End Logo + Top Nav
                // Main Nav
            #navigation
                ul
                    li
                        a(href='/login')
                            span Dashboard
                    li
                        a(href='/inventory')
                            span Inventory
                    li
                        a(href='/server')
                            span Server
                    li
                        a(href='/orders')
                            span Order Products

                //- .div(style="float:right")  
                //-     a(href='/admin')
                //-         span
                //-             button.btn.btn-primary Admin

                    



        div.container(style="margin-left:5%; margin-right:5%;")
            block content
